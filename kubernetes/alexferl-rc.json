{
   "kind":"ReplicationController",
   "apiVersion":"v1",
   "metadata":{
      "name":"alexferl",
      "labels":{
         "app":"alexferl"
      }
   },
   "spec":{
      "replicas":3,
      "selector":{
         "app":"alexferl"
      },
      "template":{
         "metadata":{
            "labels":{
               "app":"alexferl"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"alexferl",
                  "image":"gcr.io/kube-1153/alexferl:latest",
                  "ports":[
                     {
                        "containerPort":80
                     },
                     {
                        "containerPort":443
                     }
                  ]
               }
            ]
         }
      }
   }
}
