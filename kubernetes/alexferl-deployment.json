{
  "kind": "Deployment",
  "apiVersion": "extensions/v1beta1",
  "metadata": {
    "name": "alexferl",
    "labels": {
      "app": "alexferl"
    }
  },
  "spec": {
    "replicas": 1,
    "template": {
      "metadata": {
        "labels": {
          "app": "alexferl"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "alexferl",
            "image": "gcr.io/kube-1153/alexferl:latest",
            "imagePullPolicy": "Always",
            "ports": [
              {
                "containerPort": 2015
              }
            ],
            "env": [
              {
                "name": "WEBHOOK_SECRET",
                "value": "secret"
              }
            ],
            "resources": {
              "limits": {
                "cpu": "100m"
              }
            }
          }
        ]
      }
    }
  }
}
