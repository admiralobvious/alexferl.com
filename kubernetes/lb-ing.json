{
  "kind": "Ingress",
  "apiVersion": "extensions/v1beta1",
  "metadata": {
    "name": "lb",
    "annotations": {
      "kubernetes.io/ingress.allowHTTP": "false"
    }
  },
  "spec": {
    "tls": [
      {
        "secretName": "alexferl-secret"
      }
    ],
    "rules": [
      {
        "host": "alexferl.com",
        "http": {
          "paths": [
            {
              "path": "/*",
              "backend": {
                "serviceName": "alexferl",
                "servicePort": 2015
              }
            }
          ]
        }
      },
      {
        "host": "www.alexferl.com",
        "http": {
          "paths": [
            {
              "path": "/*",
              "backend": {
                "serviceName": "alexferl",
                "servicePort": 2015
              }
            }
          ]
        }
      }
    ]
  }
}
